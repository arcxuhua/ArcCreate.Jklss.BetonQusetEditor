                                    <Button x:Name="ConditionsAdd_Btn" Grid.Row="1" Width="20" Height="20" Margin="280 0 0 0" Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" ToolTip="添加" BorderBrush="#FF3AB78A" Background="#FF3AB78A">
                                        <materialDesign:PackIcon Kind="Plus" />
                                    </Button>
                                    <Button x:Name="ConditionsRemove_Btn" Grid.Row="1" Width="20" Height="20" Margin="330 0 0 0" Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" ToolTip="删除" Background="#FFB73A3A" BorderBrush="#FFB73A3A">
