                    xmlns:binding="http://schemas.microsoft.com/xaml/behaviors">

    <Style x:Key="Main" TargetType="Thumb">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <materialDesign:Flipper materialDesign:ShadowAssist.ShadowDepth="Depth0" Width="400" Height="148" Canvas.Left="249" Canvas.Top="102">
                        <materialDesign:Flipper.Effect>
                            <DropShadowEffect x:Name="ColorModel" Color="Black" ShadowDepth="0" Direction="0" BlurRadius="25"/>
                        </materialDesign:Flipper.Effect>
                        <materialDesign:Flipper.FrontContent>
                            <Grid Height="148" Width="400" Background="AliceBlue">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="95" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <materialDesign:ColorZone Mode="PrimaryDark" VerticalAlignment="Stretch">
                                    <materialDesign:PackIcon Kind="Book" Height="64" Width="64" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                </materialDesign:ColorZone>
                                <Button x:Name="HelpTool_Btn" Command="{Binding HelpToolCommand}" CommandParameter="{Binding ElementName=HelpTool_Btn}" ToolTip="该卡片还没有相关帮助" Background="White" Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" Foreground="Black" Height="25" Width="25" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 5 5 0">
                                    <materialDesign:PackIcon  Kind="Help" />
                                </Button>
                                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock HorizontalAlignment="Center" Margin="0 0 0 0" FontSize="22" FontWeight="Bold" Text="对话主体" />
                                    <Button Style="{StaticResource MaterialDesignFlatButton}" Command="{x:Static materialDesign:Flipper.FlipCommand}" FontWeight="Bold" Margin="0 0 0 0" Content="编辑" />
                                </StackPanel>
                            </Grid>
                        </materialDesign:Flipper.FrontContent>
                        <materialDesign:Flipper.BackContent>
                            <Grid Height="128" Width="410" Background="AliceBlue">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <materialDesign:ColorZone Mode="PrimaryDark" Padding="6">
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource MaterialDesignToolForegroundButton}" Command="{x:Static materialDesign:Flipper.FlipCommand}" HorizontalAlignment="Left">
                                            <materialDesign:PackIcon Kind="ArrowLeft" HorizontalAlignment="Right" />
                                        </Button>
                                        <TextBlock Margin="0 0 0 0" VerticalAlignment="Center" Text="编辑页" />
                                    </StackPanel>
                                </materialDesign:ColorZone>
                                <Grid Grid.Row="1" Margin="0 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="绑定NPC：" Margin="10 0 0 0" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                                    <TextBox x:Name="NpcName_TBox" Width="130" Height="30" Margin="70 0 0 0" Text="" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                                    <TextBlock Text="显示名称："  Margin="220 0 0 0" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                                    <TextBox x:Name="ShowNpcName_TBox" Width="110" Height="30" Margin="280 0 0 0" Text="" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left"/>

                                    <TextBlock Grid.Row="1" Text="配置名称："  Margin="10 0 0 0" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                                    <TextBox x:Name="MainName_TBox" Grid.Row="1" Width="130" Height="30" Margin="70 0 0 0" Text="" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                                </Grid>
                            </Grid>
                        </materialDesign:Flipper.BackContent>
                    </materialDesign:Flipper>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

