                                    </Button>

                                    <TextBlock Grid.Row="2" Text="内容："  Margin="10 0 0 0" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                                    <TextBox x:Name="Conditions_TBox" Grid.Row="2" Width="275" Margin="-35 0 0 0" FontSize="11" Height="30"></TextBox>
                                    <ComboBox x:Name="Conditions_ComboBox" Grid.Row="2" Width="275" Margin="-35 0 0 0" FontSize="11" Height="30" IsEnabled="False" Visibility="Hidden"></ComboBox>
                                    <Button x:Name="ConditionsSave_Btn" Grid.Row="2" Width="45" Height="25" Margin="305 0 0 5" Command="{Binding SaveCommand}" CommandParameter="{Binding .,RelativeSource={RelativeSource AncestorType=Window}}">
                                        <materialDesign:PackIcon Margin="-2 0 0 0" Kind="ContentSaveOutline" />
                                    </Button>
                                </Grid>
                            </Grid>
                        </materialDesign:Flipper.BackContent>
