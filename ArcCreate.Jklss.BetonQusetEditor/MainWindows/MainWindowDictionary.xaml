                                    <TextBlock Grid.Row="1" Text="参数：" Margin="130 0 0 0" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                                    <ComboBox x:Name="ConditionsCmdparameterEdit_CBox" IsEnabled="False" Grid.Row="1" Width="50" Height="30" Margin="170 0 0 0" Text="" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left"/>

                                    <TextBlock Grid.Row="1" Text="项："  Margin="230 0 0 0" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
